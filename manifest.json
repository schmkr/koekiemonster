{
  // Required
  "name": "Koekiemonster",
  "version": "0.9",
  "manifest_version": 2,

  // Recommended
  "description": "Verberg en accepteer alle meldingen over cookies op Nederlands meest bezochte sites.",

  "default_locale": "en",

  "icons": {  "16":   "images/icon16.png",
              "48":   "images/icon48.png",
              "128":  "images/icon128.png" },

  "browser_action": {
    "default_icon": "images/icon19.png", // optional
    "default_title": "Koekiemonster",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.nu.nl/*", 
        "http://nl.msn.com/*",
        "http://tweakers.net/*","http://*.tweakers.net/*",
        "http://www.marktplaats.nl/*","http://*.marktplaats.nl/*",
        "http://www.telegraaf.nl/*","http://*.telegraaf.nl/*",
        "http://www.nrc.nl/*","http://*.nrc.nl/*",
        "http://www.ad.nl/*","http://*.ad.nl/*"
      ],
      "js": ["js/jquery.min.js", "js/remove.js"]
    }
  ]

  // Pick one (or none)
    /*
  "browser_action": {...},
  "page_action": {...},
  "theme": {...},
  "app": {...},
  */

  // Add any of these that you need
  /*
  "background": {"persistent": false, ...},
  "background": {"persistent": true, ...},
  "chrome_url_overrides": {...},
  "content_scripts": [...],
  "content_security_policy": "policyString",
  "file_browser_handlers": [...],
  "homepage_url": "http://path/to/homepage",
  "incognito": "spanning" or "split",
  "intents": {...}
  "key": "publicKey",
  "minimum_chrome_version": "versionString",

  "nacl_modules": [...],
  "offline_enabled": true,
  "omnibox": { "keyword": "aString" },
  "options_page": "aFile.html",
  "permissions": [...],
  "plugins": [...],
  "requirements": {...},
  "update_url": "http://path/to/updateInfo.xml",
  "web_accessible_resources": [...],
  "sandbox": [...]
  */
}